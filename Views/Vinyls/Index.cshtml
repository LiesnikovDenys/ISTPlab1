@model IEnumerable<ShopDomain.Model.Vinyl>

@{
    ViewData["Title"] = "Index";
}

<h1>   </h1>
<h1> Платівки </h1>

<p>
    <a asp-action="Create">Додати платівку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VinilName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VinilName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VinilId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VinilId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VinilId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
